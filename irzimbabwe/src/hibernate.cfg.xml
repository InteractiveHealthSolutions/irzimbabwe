<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.username">irzuser</property>
  <property name="hibernate.connection.password">irzuser</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/irzimbabwe?zeroDateTimeBehavior=convertToNull</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.connection.pool_size">0</property>
  <property name="hibernate.connection.autocommit">true</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <property name="hibernate.use_sql_comments">false</property>
  <property name="hibernate.format_sql">false</property>
  <property name="hibernate.transaction.auto_close_session">true</property>
  
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Defaults.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Definition.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/DefinitionType.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Encounter.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/EncounterElement.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/EncounterPrerequisite.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/EncounterResults.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/EncounterType.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Feedback.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Location.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/LogData.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/LogLogin.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Patient.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Person.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/PersonRole.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Response.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Referral.hbm.xml"/>
