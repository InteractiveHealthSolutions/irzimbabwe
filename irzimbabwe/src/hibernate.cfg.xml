  <mapping resource="org/irdresearch/irzimbabwe/shared/model/SmsText.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/SputumTest.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/User.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/UserMapping.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/UserRights.hbm.xml"/>
  <mapping resource="org/irdresearch/irzimbabwe/shared/model/Visit.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
